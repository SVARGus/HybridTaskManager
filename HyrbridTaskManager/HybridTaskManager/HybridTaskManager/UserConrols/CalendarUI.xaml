<UserControl x:Class="HybridTaskManager.UserConrols.CalendarUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HybridTaskManager.UserConrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="*"/>
            
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

       
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#DDDDDD" >
            <Button Content="⮜ Back" Margin="2" Padding="5,2" Width="75"/>
            <Button Content="Forward ⮞" Margin="2" Padding="5,2" Width="75"/>
            <Button Content="⟳ Refresh" Margin="2" Padding="5,2" Width="75"/>
        </StackPanel>

       
        <Grid Grid.Row="1" Background="#F0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Sunday" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" Text="Monday" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="Tuesday" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
            <TextBlock Grid.Column="3" Text="Wednesday" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
            <TextBlock Grid.Column="4" Text="Thursday" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
            <TextBlock Grid.Column="5" Text="Friday" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
            <TextBlock Grid.Column="6" Text="Saturday" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        </Grid>

        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0">
                <StackPanel x:Name="SundayTasks" Margin="5"/>
            </ScrollViewer>
            <ScrollViewer Grid.Column="1">
                <StackPanel x:Name="MondayTasks" Margin="5"/>
            </ScrollViewer>
            <ScrollViewer Grid.Column="2">
                <StackPanel x:Name="TuesdayTasks" Margin="5"/>
            </ScrollViewer>
            <ScrollViewer Grid.Column="3">
                <StackPanel x:Name="WednesdayTasks" Margin="5"/>
            </ScrollViewer>
            <ScrollViewer Grid.Column="4">
                <StackPanel x:Name="ThursdayTasks" Margin="5"/>
            </ScrollViewer>
            <ScrollViewer Grid.Column="5">
                <StackPanel x:Name="FridayTasks" Margin="5"/>
            </ScrollViewer>
            <ScrollViewer Grid.Column="6">
                <StackPanel x:Name="SaturdayTasks" Margin="5"/>
            </ScrollViewer>
        </Grid>

       
        <Button Grid.Row="3" Content="Add Task" HorizontalAlignment="Center" Margin="10" Padding="10,5" Width="120"/>
    </Grid>
</UserControl>
