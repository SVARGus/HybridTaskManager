<UserControl x:Class="HybridTaskManager.UserConrols.KanbanBoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HybridTaskManager.UserConrols"
             xmlns:models="clr-namespace:HybridTaskManager.DTO.DictionaryEntity"
             Background="White">
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel Orientation="Horizontal" Margin="10">
            <StackPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="AddColumn_Click" Header="Добавить колонку" Click="AddColumn_Click"/>
                    <MenuItem x:Name="RefreshBoard_Click" Header="Обновить" Click="RefreshBoard_Click"/>
                    <MenuItem x:Name="Settings_Click" Header="Настройки" Click="Settings_Click"/>
                </ContextMenu>
            </StackPanel.ContextMenu>

            <ItemsControl ItemsSource="{Binding StatusColumns}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:KanbanColumnControl DataContext="{Binding}" Margin="5,0" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
