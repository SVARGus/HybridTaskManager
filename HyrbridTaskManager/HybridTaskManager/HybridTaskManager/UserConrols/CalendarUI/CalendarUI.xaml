<UserControl x:Class="HybridTaskManager.UserConrols.CalendarUI.CalendarUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HybridTaskManager.UserConrols.CalendarUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White"
         BorderThickness="1">



        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1"
                 BorderThickness="1"
                 BorderBrush="Black"
                 CornerRadius="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="41*"/>
                        <RowDefinition Height="62*"/>
                        <RowDefinition Height="302*"/>
                        <RowDefinition Height="41*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1"
                         Background="#FFD8BFD8"
                         BorderThickness="1"
                         BorderBrush="Black" Margin="0,0,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="0"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="1" Loaded="DaysUI_Loaded"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="2"/>

                             <local:DaysUI HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Grid.Column="3"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="4"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="5"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="6"/>

                        </Grid>


                    </Border>

                </Grid>



            </Border>

        </Grid>




    </Border>
</UserControl>
