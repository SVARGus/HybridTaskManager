<UserControl x:Class="HybridTaskManager.UserConrols.CalendarUI.CalendarUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HybridTaskManager.UserConrols.CalendarUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White"
         BorderThickness="1">



        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="41*"/>
                        <RowDefinition Height="62*"/>
                        <RowDefinition Height="302*"/>
                        <RowDefinition Height="41*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1"
                         Background="#FF696969"
                         BorderThickness="1"
                         BorderBrush="Black" Margin="0,0,0,5"
                         x:Name="DayBorder">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="0"
                                          Loaded="CalendarUI_Loaded"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="1" 
                                          Loaded="CalendarUI_Loaded"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="2"
                                          Loaded="CalendarUI_Loaded"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Grid.Column="3"
                                           Loaded="CalendarUI_Loaded"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="4"
                                          Loaded="CalendarUI_Loaded"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="5"
                                          Loaded="CalendarUI_Loaded"/>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="6"
                                          Loaded="CalendarUI_Loaded"/>




                        </Grid>

                    </Border>

                    <Border Grid.Row="2" 
                             x:Name="CalendarBorder"
                               Background="White"
                               BorderBrush="LightGray"
                               BorderThickness="1">
                        <Grid ShowGridLines="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                        </Grid>

                    </Border>

                    <Border x:Name="ButtonBorder"
                            Grid.Row="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="+" FontSize="30" Click="Btn_Click"/>
                            <Button Grid.Column="1" Content="+" FontSize="30" Click="Btn_Click"/>
                            <Button Grid.Column="2" Content="+" FontSize="30" Click="Btn_Click"/>
                            <Button Grid.Column="3" Content="+" FontSize="30" Click="Btn_Click"/>
                            <Button Grid.Column="4" Content="+" FontSize="30" Click="Btn_Click"/>
                            <Button Grid.Column="5" Content="+" FontSize="30" Click="Btn_Click"/>
                            <Button Grid.Column="6" Content="+" FontSize="30" Click="Btn_Click"/>
                        </Grid>

                    </Border>

                </Grid>



            </Border>

        </Grid>




    </Border>
</UserControl>
