<UserControl x:Class="HybridTaskManager.UserConrols.CalendarUI.CalendarUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HybridTaskManager.UserConrols.CalendarUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="#FF696969"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Content" Value="+"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>




    <Border Background="White"
         BorderThickness="1">



        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="41*"/>
                        <RowDefinition Height="62*"/>
                        <RowDefinition Height="302*"/>
                        <RowDefinition Height="41*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1"
                         Background="#FF696969"
                         BorderThickness="1"
                         BorderBrush="Black" Margin="0,0,0,5"
                         x:Name="DayBorder">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="0"
                                          />

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="1" 
                                         />

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="2"
                                          />

                            <local:DaysUI HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Grid.Column="3"
                                           />

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="4"
                                          />

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="5"
                                          />

                            <local:DaysUI HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Grid.Column="6"
                                         />




                        </Grid>

                    </Border>

                    <Border Grid.Row="2" 
                             x:Name="CalendarBorder"
                               Background="White"
                               BorderBrush="LightGray"
                               BorderThickness="1">
                        <Grid ShowGridLines="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                        </Grid>

                    </Border>

                    <Border x:Name="ButtonBorder"
                            Grid.Row="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Style="{StaticResource RoundButtonStyle}" />
                            <Button Grid.Column="1" Style="{StaticResource RoundButtonStyle}" />
                            <Button Grid.Column="2" Style="{StaticResource RoundButtonStyle}" />
                            <Button Grid.Column="3" Style="{StaticResource RoundButtonStyle}" />
                            <Button Grid.Column="4" Style="{StaticResource RoundButtonStyle}" />
                            <Button Grid.Column="5" Style="{StaticResource RoundButtonStyle}" />
                            <Button Grid.Column="6" Style="{StaticResource RoundButtonStyle}" />
                        </Grid>

                    </Border>
                    

                </Grid>



            </Border>

        </Grid>




    </Border>
</UserControl>
