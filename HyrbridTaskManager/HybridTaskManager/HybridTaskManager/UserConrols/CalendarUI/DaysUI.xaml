<UserControl x:Class="HybridTaskManager.UserConrols.CalendarUI.DaysUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HybridTaskManager.UserConrols.CalendarUI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch">

    <Border Background="White"
            CornerRadius="50"
            BorderBrush="Azure"
            BorderThickness="2"
            Padding="5">

        <Grid>
            <!-- Единый стиль границ -->
            <Grid.Resources>
                <Style TargetType="Line">
                    <Setter Property="Stroke" Value="Azure"/>
                    <Setter Property="StrokeThickness" Value="2"/>
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

           
            <TextBlock x:Name="DayOfWeekText" Grid.Row="0"
                       Text="День Недели"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            
            <Line Grid.Row="1"
                  X1="0" X2="1"
                  Stretch="Fill"
                  Margin="5,0"/>

           
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="DayNumberText" Grid.Column="0"
                       Text="30"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                
                <Line Grid.Column="1"
                      Y1="0" Y2="1"
                      Stretch="Fill"
                      Margin="0,5"/>

                <TextBlock x:Name="MonthText" Grid.Column="2"
                       Text="Май"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>